#!/usr/bin/env sh

# Java

alias open=xdg-open

########################### Alias ###########################
# vim
export EDITOR=/usr/bin/vim


########################### Env ###########################

# Java
export JAVA_HOME=/usr/java/lastest
export JAVA_OPTS=-Dfile.encoding=UTF-8

# Python
export PYENV_ROOT="$HOME/.pyenv"
[ -d "${PYENV_ROOT}" ] && {
    export PATH=$PYENV_ROOT/bin:$PYENV_ROOT/shims:$PATH
    eval "$(pyenv init -)"
}

